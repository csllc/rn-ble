{
  "compilerOptions": {
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "target":"ES2019",
    "outDir": "dist",

    "baseUrl": "./src",
    "rootDir": "./src"
    },
    "include":["./src/**/*.ts","./src/**/*.d.ts"],
}
